#! /usr/bin/env bash

_is_darwin() {
    [[ "$#" -eq 0 ]] && [[ "$(uname -s)" == "Darwin" ]]
}

_is_linux() {
    [[ "$#" -eq 0 ]] && [[ "$(uname -s)" == "Linux" ]]
}

_is_termux() {
    _is_linux && [[ "$HOME" =~ "com.termux/files/home" ]]
}

BASE_URL="$(location https://github.com/txthinking/brook/releases/latest | sed 's/tag/download/g')"

if _is_darwin;then 
    echo "$BASE_URL/brook_macos_amd64"
    exit
fi

if _is_linux;then
    echo "$BASE_URL/brook"
    exit
fi
